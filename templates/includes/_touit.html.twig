<div class="touit  m-auto my-3 rounded-1 shadow-sm">
	<div class="avatar ms-3 mt-3">
		{% if touit.user.avatarPath %}
			<img class="rounded-circle" src="{{ vich_uploader_asset(touit.user) }}" alt="{{ touit.user.username }}">
		{% else %}
			<img class=" rounded-circle" src="{{ asset('build/images/avatar.jpg') }}" alt="pas d'avatar">
		{% endif %}
	</div>
	<h2 class="touit-title mx-3 mt-5 mb-0 p-0">{{ touit.user.username }}</h2>
	<div class="touit-date mx-3 text-secondary">{{ touit.createdAt|date('d/m/Y H\\hi') }}</div>
	<p class="fs-4 message p-3">{{ touit.message }}</p>
