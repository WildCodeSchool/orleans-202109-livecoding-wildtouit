{% extends 'base.html.twig' %}

{% block title %}Home
{% endblock %}

{% block stylesheets %}
	{{ encore_entry_link_tags('home') }}
{% endblock %}

{% block body %}
	<div class="container-fluid">
		{% if app.user == member %}
		<h1>Mes touits</h1>
		{% else %}
		<h1>Touits de {{ member.username }}</h1>
		{% endif %}
		{% for touit in member.touits %}
			<p>{{ touit.message }}</p>
			<div>{{ touit.createdAt|date('d/m/Y') }}</div>
		{% endfor %}

	</div>
{% endblock %}
