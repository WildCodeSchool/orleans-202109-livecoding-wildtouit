{% extends 'base.html.twig' %}

{% block title %}Home
{% endblock %}

{% block stylesheets %}
	{{ encore_entry_link_tags('home') }}
{% endblock %}

{% block body %}
	<div class="container-fluid">
		{% if app.user == member %}
			<h1>Mes touits</h1>
		{% else %}
			<h1>Touits de {{ member.username }}</h1>
		{% endif %}
		{% for touit in member.touits %}
			{% include 'includes/_touit.html.twig' with {'touit': touit} %}
		{% endfor %}
	</div>
{% endblock %}
