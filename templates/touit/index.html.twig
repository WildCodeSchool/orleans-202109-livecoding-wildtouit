{% extends 'base.html.twig' %}

{% block title %}Touit index
{% endblock %}

{% block body %}
	<h1>Touit index</h1>

	<a class="btn btn-primary" href="{{ path('touit_new') }}">
		<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus" viewbox="0 0 16 16">
			<path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
		</svg>
		Ajouter un touit
	</a>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Message</th>
				<th>CreatedAt</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for touit in touits %}
				<tr>
					<td>{{ touit.id }}</td>
					<td>{{ touit.message }}</td>
					<td>{{ touit.createdAt ? touit.createdAt|date('Y-m-d H:i:s') : '' }}</td>
					<td>
						<a href="{{ path('touit_edit', {'id': touit.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="4">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

{% endblock %}
